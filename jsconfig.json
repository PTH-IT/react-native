{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
          "config/*": ["config/*"],
          "components/*": ["src/components/*"],
          "API/*": ["src/api/*"],
          "features/*": ["src/features/*"],
          "app/*": ["src/app/*"],

        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}